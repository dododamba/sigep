{% block body %}
<div class="project-detail-container">
    {# Header Projet #}
    <div class="detail-header">
        <div class="header-left">
            <a href="{{ path('app_top_management_dashboard') }}" class="btn-back">
                <i data-lucide="arrow-left"></i>
