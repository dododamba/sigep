                        <thead>
                            <tr>
                                <th>Projet</th>
                                <th>Institution</th>
                                <th>Secteur</th>
                                <th>Budget (FCFA)</th>
                                <th>Progression</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
